<div data-channel="games" data-game-id="<%= @game.id %>">
  <p><%= link_to "Back to Games", games_path %></p>
  <h2><%= @game.started_at.to_s(:short) %> â€“ <%= @game.home_team.name %> vs. <%= @game.away_team.name %></h2>
  <br>
  <div class="row">
    <div class="col-sm-4">
      <table class="table table-bordered" style="font-size: 1.75rem">
        <tbody>
          <tr>
            <td><%= @game.home_team.name %></td>
            <td id="home-team-runs"><%= @game.home_team_runs %></td>
            <td id="home-team-hits"><%= @game.home_team_hits %></td>
            <td id="home-team-errors"><%= @game.home_team_errors %></td>
          </tr>
          <tr>
            <td><%= @game.away_team.name %></td>
            <td id="away-team-runs"><%= @game.away_team_runs %></td>
            <td id="away-team-hits"><%= @game.away_team_hits %></td>
            <td id="away-team-errors"><%= @game.away_team_errors %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-8">
      <table class="table table-condensed text-center" style="font-size: 1.3rem;">
        <thead>
          <tr>
            <% @game.innings.each do |inning| %>
              <th style="text-align: center; width: 30px"><%= inning.number %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @game.innings.each do |inning| %>
              <td id="inning-<%= inning.number %>-home"><%= inning.home_team_runs || "-" %></td>
            <% end %>
          </tr>
          <tr>
            <% @game.innings.each do |inning| %>
              <td id="inning-<%= inning.number %>-away">
                <%= inning.away_team_runs.nil? ? (inning.home_team_runs.nil? ? "-" : "X") : inning.away_team_runs %>
              </td>
            <% end %>
          </tr>
      </table>
    </div>
  </div>
</div>
